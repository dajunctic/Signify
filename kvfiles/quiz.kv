<TooltipMDIconButton@MDIconButton+MDTooltip>


<AnswerCard>:
    size_hint: .45, .15
    padding: 20
    elevation: 2
    border_radius: 20
    radius: [15]
    pos_hint: {'center_x': .5, 'center_y': .09}
    md_bg_color: 'b0ffd4'
    cols: 1

    MDRelativeLayout:
        MDLabel:
            id: answer
            font_name: 'Bold'
            text: 'Chào buổi sáng'
            pos_hint: {"center_y": .9, "left": 1}

        MDFillRoundFlatButton:
            id: button
            font_name: 'Bold'
            md_bg_color: '09b858'
            text: 'Tiếp tục'
            size_hint_x: 1
            pos_hint: {'center_x': .5, 'bottom': 1}
            on_press:
                root.parent.parent.parent.change_question()

<MultipleChoice>:
    name: 'multiple_choice'
    MDFloatLayout:
        size_hint: 1, .1
        pos_hint: {'center_x': .5, 'center_y': .95}
        md_bg_color: 'F5F5DC'
        TooltipMDIconButton:
            icon: "arrow-left-circle"
            tooltip_text: 'Quay lại'
            pos_hint: {'center_y': .5}
            on_press:
                root.parent.current = 'lesson'
                root.parent.transition.direction = 'right'

        MDLabel:
            id: topic_name
            text: 'Bảng chữ cái'
            font_name: 'Bold'
            font_size: '28sp'
            halign: 'center'
            pos_hint: {'center_x': .5, 'top': 1}

    MDProgressBar:
        id: bar
        value: 10
        height: '2dp'
        color: '26ab57'
        pos_hint: {"center_x": .5, 'center_y': .9}

    MDFloatLayout:
        size_hint: 1, .9
        pos_hint: {'center_x': .5, 'center_y': .45}

        VideoPlayer:
            id: video
            source: ''
            state: 'play'
            options: {'eos': 'stop'}
            size_hint: .4, .5
            pos_hint: {'center_x': .5, 'center_y': .7}


        MDGridLayout:
            size_hint: .9, .34
            cols: 2
            pos_hint: {'center_x': .5, 'center_y': .22}
            spacing: '60dp', '20dp'

            MDFlatButton:
                id: a
                text_color: 'white'
                md_bg_color: 'FF4B4C'
                size_hint: .8, .2
                font_name: 'Bold'
                font_size: '24sp'
                text: 'Chào buổi sáng'
                elevation: 3
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press:
                    root.parent.parent.check_answer(self)

            MDFlatButton:
                id: b
                text_color: 'white'
                md_bg_color: '8BC34A'
                size_hint: .8, .2
                font_name: 'Bold'
                font_size: '24sp'
                text: 'Chào buổi sáng'
                elevation: 3
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press:
                    root.parent.parent.check_answer(self)

            MDFlatButton:
                id: c
                text_color: 'white'
                md_bg_color: 'FBB237'
                size_hint: .8, .2
                font_name: 'Bold'
                text: 'Chào buổi sáng'
                font_size: '24sp'
                elevation: 3
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press:
                    root.parent.parent.check_answer(self)

            MDFlatButton:
                id: d
                text_color: 'white'
                font_size: '24sp'
                md_bg_color: '3DB2FF'
                size_hint: .8, .2
                font_name: 'Bold'
                text: 'Chào buổi sáng'
                elevation: 3
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press:
                    root.parent.parent.check_answer(self)


<Score>:
    name: 'score'
    MDLabel:
        font_name: 'Regular'
        text: 'Điểm số của bạn trong lần luyện tập này!'
        halign: 'center'
        pos_hint: {'center_x': .5, 'center_y': .67}
        font_size: '26sp'


    MDLabel:
        id: score
        font_name: 'Bold'
        text: '06/10 điểm'
        halign: 'center'
        color: '02e687'
        pos_hint: {'center_x': .5, 'center_y': .6}
        font_size: '40sp'


    MDLabel:
        pos_hint: {'center_x': .5, 'center_y': .45}
        font_name: 'Light'
        text: 'Học, học nữa, học mãi.'
        halign: 'center'
        font_size: '20sp'
        color: '838584'

    MDLabel:
        pos_hint: {'center_x': .5, 'center_y': .4}
        font_name: 'Light'
        text: 'Hãy dùng nghị lực và sự kiên trì để đánh bại mọi thứ'
        halign: 'center'
        font_size: '20sp'
        color: '838584'

    MDCard:
        size_hint: None, None
        size: 400, 60
        pos_hint: {'center_x': .5, 'center_y': .1}
        md_bg_color: '02b38f'
        elevation: 3
        radius: [10]
        on_release:
            root.parent.current = 'lesson'
            root.parent.transition.direction = 'left'

        MDLabel:
            pos_hint: {'center_x': .5, 'center_y': .5}
            font_name: 'Bold'
            color: 'white'
            text: 'Tiếp tục'
            halign: 'center'




