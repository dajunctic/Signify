<SearchCard>:
    on_release: root.parent.parent.parent.parent.parent.parent.parent.parent.show_video(self)
<VideoDisplay>:
    name: 'video'
    MDFloatLayout:
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .55}

        VideoPlayer:
            id: video_source
            source: ''
            options: {'eos': 'stop'}
            size_hint: .5, .7
            pos_hint: {'center_x': .5, 'center_y': .62}

        MDLabel:
            id: word
            text: 'Chào buổi sáng'
            font_name: 'Bold'
            font_size: '26sp'
            pos_hint: {'center_x': .5, 'center_y': .25}
            halign: 'center'

        MDLabel:
            id: description
            text: 'Chào buổi sáng'
            font_name: 'Light'
            font_size: '12sp'
            size_hint_x: .5
            pos_hint: {'center_x': .5, 'center_y': .18}
            halign: 'center'

        MDFillRoundFlatButton:
            id: simulate_button
            font_name: 'Bold'
            text: 'Thử mô phỏng lại'
            size_hint_x: .3
            pos_hint: {'center_x': .5, 'center_y': .11}
            on_press:
                root.parent.current = 'model'
                root.parent.transition.direction = 'left'
                root.parent.parent.start_camera()
                root.parent.parent.show_capture = True

        MDFillRoundFlatButton:
            font_name: 'Bold'
            text: 'Quay lại'
            md_bg_color: 'f56d05'
            size_hint_x: .3
            pos_hint: {'center_x': .5, 'center_y': .04}
            on_press:
                root.parent.current = 'main'
                root.parent.transition.direction = 'right'


<VideoSimulate>:
    name: 'model'
    Image:
        id: image
        pos_hint: {'center_x': .5, 'center_y': .6}

    MDLabel:
        pos_hint: {'center_x': .5, 'center_y': .2}
        halign: 'center'
        font_name: 'Bold'
        font_size: '26sp'
        text: 'Bạn hãy thử thực hiện hành động trước camera'
        color: '02ad66'

    MDLabel:
        id: simulate_success
        pos_hint: {'center_x': .5, 'center_y': .9}
        halign: 'center'
        font_name: 'Bold'
        font_size: '26sp'
        text: ''
        color: '02ad66'

    MDFillRoundFlatButton:
        font_name: 'Bold'
        text: 'Quay lại'
        md_bg_color: 'f56d05'
        size_hint_x: .3
        pos_hint: {'center_x': .5, 'center_y': .04}
        on_press:
            root.parent.current = 'main'
            root.parent.transition.direction = 'right'
            root.parent.parent.show_capture = False
            root.parent.parent.stop_camera()